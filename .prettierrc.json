{
    "printWidth": 120,
    "overrides": [
        {
            "files": ["**.ts", "**.test.ts"],
            "options": {
                "tabWidth": 2,
                "useTabs": false,
                "singleQuote": true,
                "semi": true,
                "requirePragma": false,
                "bracketSpacing": true,
                "trailingComma": "all",
                "arrowParens": "always",
                "parser": "typescript",
                "endOfLine": "lf"
            }
        },
        {
            "files": ["**.json"],
            "options": {
                "tabWidth": 4,
                "useTabs": false,
                "parser": "json",
                "endOfLine": "lf"
            }
        }
    ]
}
