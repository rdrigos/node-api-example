{
    "compilerOptions": {
        "strict": true,
        "lib": ["ES2023"],
        "module": "node16",
        "target": "ES2022",
        "moduleResolution": "Node16",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*", "tests/**/*"],
    "exclude": ["node_modules/**", "dist/**"]
}
